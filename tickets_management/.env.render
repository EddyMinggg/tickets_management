# 生成應用密鑰 - 可用任意 32 字元字符串
APP_KEY=base64:RENDER_WILL_GENERATE_THIS

# 應用設置
APP_NAME="演唱會門票管理"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.onrender.com

# 日誌
LOG_CHANNEL=single
LOG_LEVEL=debug

# 數據庫 (Render 使用 SQLite)
DB_CONNECTION=sqlite
DB_DATABASE=/var/data/database.sqlite

# 緩存和會話
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# 郵件
MAIL_MAILER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Redis (不需要)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Filesystem
FILESYSTEM_DISK=local

# 應用特定設置
EXCHANGE_RATE=1.09
